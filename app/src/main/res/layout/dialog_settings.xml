<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/settings_dialog_width"
    android:layout_height="@dimen/settings_dialog_height">

    <TabHost
        android:id="@+id/tabHost"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nextFocusDown="@android:id/tabcontent"/>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.phlox.tvwebbrowser.activity.main.dialogs.settings.MainSettingsView
                    android:id="@+id/tabMain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <com.phlox.tvwebbrowser.activity.main.dialogs.settings.ShortcutsSettingsView
                    android:id="@+id/tabShortcuts"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <com.phlox.tvwebbrowser.activity.main.dialogs.settings.VersionSettingsView
                    android:id="@+id/tabVersion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>
        </LinearLayout>
    </TabHost>
</LinearLayout>